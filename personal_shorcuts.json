      "description": "Home to Control+A: moveToBeginningOfLine",
      "manipulators": [
        {
          "from": {
            "key_code": "home"
          },
          "to": [
            {
              "key_code": "a",
              "modifiers": ["left_control"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "End to Control+E: moveToEndOfLine",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "end"
          },
          "to": [
            {
              "key_code": "e",
              "modifiers": "left_control"
            }
          ]
        }
      ]
    },
